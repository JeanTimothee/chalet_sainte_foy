<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "http://www.chaletsaintefoy.com/index.htm", class: "navbar-brand" do %>
    <%= image_tag "https://www.ski-planet.com/photo/sainte-foy-tarentaise/logo-sainte-foy-tarentaise.jpg" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active mr-4">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      <% else %>
        <% if  params[:action] == "home" %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% else %>
          <%= link_to "Home", "http://www.chaletsaintefoy.com/index.htm", class: "nav-link" %>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
